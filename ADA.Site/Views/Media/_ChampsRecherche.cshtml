@model ADA.Site.Models.RechercheMediaViewModel

<div class="row search-form">
    <div class="col-md-12">
        <div class="form-group row">
            @Html.LabelFor(x => x.TypeMedium, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("TypeMedium", new SelectList(Model.TypeMedia, "Key", "Value", Model.TypeMedium), htmlAttributes: new Dictionary<string, object>()
                {
                    { "class", "form-control" }
                })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Nom, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(x => x.Nom, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Rechercher</button>
    </div>
</div>
